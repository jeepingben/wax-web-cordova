<?xml version='1.0' encoding='utf-8'?>
<widget id="net.jeepingben.waxchooser" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wax-Chooser</name>
    <description>
        An Apache Cordova port of the Waxchoosr web-app.
    </description>
    <author email="ben_deering@jeepingben.net" href="http://www.jeepingben.net">
        Apache Cordova Team
    </author>
    <platform name="android">
        <icon density="ldpi" src="www/android-chrome-36x36.png" />
        <icon density="mdpi" src="www/android-chrome-48x48.png" />
        <icon density="hdpi" src="www/android-chrome-48x48.png" />
        <icon density="xhdpi" src="www/android-chrome-72x72.png" />
    </platform>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.0" />
    <plugin name="cordova-plugin-x-socialsharing" spec="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git" />
    <plugin name="cordova-sqlite-ext" spec="https://github.com/litehelpers/cordova-sqlite-ext.git" />
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
</widget>
